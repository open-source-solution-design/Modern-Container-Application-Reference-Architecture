- name: set k3s cluster with vhosts
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: k3s
      vars:
        group: master
        cluster_domain: 'cluster.local'
        version: 'v1.24.7+k3s1'
        pod_cidr: '172.16.0.0/16'
        svc_cidr: '192.168.0.0/24'
        cni_iface: 'eth0'
