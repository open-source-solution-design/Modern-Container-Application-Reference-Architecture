- name: set k3s cluster with vhosts
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: k3s
      vars:
        group: master
        pod_cidr: '10.16.0.0/16'
        pod_gateway: '10.16.0.1'
        svc_cidr: '10.96.0.0/16'
        cni_iface: 'eth0'
