- name: setup openldap 
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: openldap
      vars:
        group: master
        namespace: itsm
        domain: onwalk.net
        auto_issuance: true
        update_secret: true
        secret: openldap-tls
        key_file: '/etc/ssl/onwalk.net.key'
        cert_file: '/etc/ssl/onwalk.net.cert'
