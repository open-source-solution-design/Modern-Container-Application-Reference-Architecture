- name: set metric agent for all ec2 nodes
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: common
      vars:
        group: all
    - include_role:
        name: prometheus-agent
      vars:
        group: all
        label: "env: dev"
        remote_write: 'http://data-gateway.onwalk.net:3100/api/v1/write'
