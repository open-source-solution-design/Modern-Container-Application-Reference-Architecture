- name: set bookinfo with helm
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: bookinfo
      vars:
        group: master
        auto_issuance: false
        update_secret: true
        storage_type: oss
        tls:
          - secret_name: bookinfo-tls
            keyfile: /etc/ssl/onwalk.net.key
            certfile: /etc/ssl/onwalk.net.pem
