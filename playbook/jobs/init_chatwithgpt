- name: setup chatwithgpt app in k3s 
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: chatwithgpt
      vars:
        group: master
        namespace: chatwithgpt
        domain: onwalk.net
        auto_issuance: true
        update_secret: true
        secret: chatwithgpt-tls
        key_file: '/etc/ssl/onwalk.net.key'
        cert_file: '/etc/ssl/onwalk.net.cert'
