- name: create ssl cert 
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: cert-manager
      vars:
        group: master
        namespace: gitlab
        domain: onwalk.net
        auto_issuance: true
        tls:
          - secret_name: gitlab-tls
            keyfile: /etc/ssl/onwalk.net.key
            certfile: /etc/ssl/onwalk.net.pem
