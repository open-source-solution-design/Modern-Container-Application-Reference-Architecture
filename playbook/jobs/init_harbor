- name: setup harbor 
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: harbor
      vars:
        group: master
        namespace: harbor
        domain: onwalk.net
        auto_issuance: false
        db_namespace: database
        storage_type: oss
        tls:
          - secret_name: harbor-tls
            keyfile: /etc/ssl/onwalk.net.key
            certfile: /etc/ssl/onwalk.net.pem
