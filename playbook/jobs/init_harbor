- name: setup harbor 
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: harbor
      vars:
        group: master
        namespace: harbor
        domain: apollo-ev.com
        db_namespace: database
        auto_issuance: false
        update_secret: true
        storage_type: oss
        tls:
          - secret_name: harbor-tls
            keyfile: /etc/ssl/apollo-ev.com.key
            certfile: /etc/ssl/apollo-ev.com.pem
