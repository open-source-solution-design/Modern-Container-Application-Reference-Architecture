- name: setup observability server 
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: observability-server
      vars:
        group: master
        namespace: monitoring
        db_namespace: database
        domain: onwalk.net
        secret: obs-tls
        auto_issuance: true
        update_secret: true
        key_file: '/etc/ssl/onwalk.net.key'
        cert_file: '/etc/ssl/onwalk.net.cert'
